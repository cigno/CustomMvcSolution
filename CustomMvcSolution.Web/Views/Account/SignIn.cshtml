@model CustomMvcSolution.Web.Models.LogOnViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>SignIn</title>
    <link href="@Url.Content("~/css/normalize.css")" type="text/css" rel="stylesheet"/>
    <link href="@Url.Content("~/css/main.css")" type="text/css" rel="stylesheet"/>
    <link href="@Url.Content("~/css/LogOn.css")"/ type="text/css" rel="stylesheet">
    <script src="@Url.Content("~/js/vendor/modernizr-2.6.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="left">
            &nbsp;
        </div>
        <div class="right">
            <h2>@Resources.ApplicationName</h2>
            <p>@Resources.SignInDescription</p>
            @using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
            {
                <table> 
                    <tr>
                        <td>@Html.LabelFor(m => m.UserName)</td>
                        <td>@Html.EditorFor(m => m.UserName)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Password)</td>
                        <td>@Html.EditorFor(m => m.Password)</td>
                    </tr>
                </table>
                <input type="submit" value="@Resources.SignIn" class="submitButton"/>
            }
        </div>
    </div>
</body>
</html>
